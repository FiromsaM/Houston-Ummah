<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Houston Ummah - Feeds</title>
  <link rel="stylesheet" href="/styles/calendar.css">
  <link rel="stylesheet" href="/styles/normalize.css">
  <script src="http://code.jquery.com/jquery-2.1.1.min.js"></script>

  <%- include('partials/header') -%>
</head>
<body>

  <div class="alert">
    <span id="closebtn">&times;</span>
    Ramadan may affect some of these events.
  </div>

  <div class="eventContainer">
    <div class="date">Monday </div>
    <% count = 0 %>

    <% for(let i=0; i<event.length; i++) {%>
      <% if ((event[i].weekly === true) && (event[i].dayOfWeek === "monday"))  {%> 
      <div class="event"><img class="flyer" src="<%= event[i].image%>"></div>    
      <% count = 1 %>        
    <% } %>
    <% } %>
    <% if(count == 0){ %>
      <div>
      <h2 class="dayOfWeek">Nothing yet...</h2>
      </div>      
    <% } %>
  </div>

    <div class="eventContainer">
