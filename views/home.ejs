<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>HoustonUmmah</title>
  <link rel="stylesheet" href="/styles/home.css">
  <link rel="stylesheet" href="/styles/normalize.css">
  <link rel="stylesheet" href="/styles/reset.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <%- include('partials/header') -%>
</head>
<body>
  <div class="hero-image">
    <div class="hero-text">
      <h1 class="homeTitle"> <a href="/">Houston Ummah</a></h1>
    </div>
  </div>

  <section id="main" class="wrapper style2">
    <div class="title"><a href="/weeklyEvents">Weekly Events</a></div>

    <section class="container"> 
      <button class="pre-btn"><img src="image/arrow.png" alt=""></button>
      <button class="nxt-btn"><img src="image/arrow.png" alt=""></button>
      <div class="carousel-container">
          <% for(let i=0; i < event.length; i++) {%>
            <% if ((event[i].weekly === true))  {%> 
            <div class="carousel-card">
              <div class="carousel-image">
                <!-- <a href="/event/<%= event[i]._id%>"> -->
                  <img src="<%= event[i].image%>" class="carousel-thumb" alt="">
                <!-- </a>       -->
              </div>  
            </div>  
            <% } %>
          <% } %>
      </div>
    </section>

    <div id="more">
      <button class="btn-more style1">
        <a href="/weeklyEvents">More...</a>
      </button>
    </div>
	</section> 


  <section id="footer" class="wrapper style">
    <div class="title title1"><a href="/iftar">Iftars</a></div>

    <section class="container"> 
      <button class="pre-btn"><img src="image/arrow.png" alt=""></button>
      <button class="nxt-btn"><img src="image/arrow.png" alt=""></button>
      <div class="carousel-container">
          <% for(let i=0; i < event.length; i++) {%>
            <% if ((event[i].iftar === true))  {%> 
            <div class="carousel-card">
              <div class="carousel-image">
                  <img src="<%= event[i].image%>" class="carousel-thumb" alt="">
              </div> 
            </div>
            <% } %>
          <% } %>
      </div>
    </section>

    <div id="more">
      <button class="btn-more style2">
        <a href="/iftar">More...</a>
      </button>
    </div>

    <!-- Contact -->
    <section class="feature-list small">
      <div class="row">
        <div class="col-6 col-12-small">
          <section>
            <h3 class="social"><i class="icon fas fa-comment"></i>Social</h3>
            <p>
              <a target="_blank" href="https://www.instagram.com/houstonummah/" class="ig-logo fa fa-instagram" style="font-size:26px"></a>
            </p>
          </section>
        </div>
        <div class="col-6 col-12-small">
          <section>
            <h3 class="social"><i class="icon fa-solid fa-envelope"></i>Email</h3>
            <p>
              <a class="email" href="#">HoustonUmmah01@gmail.com</a>
            </p>
          </section>
        </div>
      </div>
    </section>
	</section> 

<script src="/js/carousel.js"></script>
<script src="https://kit.fontawesome.com/53c992d21c.js" crossorigin="anonymous"></script>
<%- include('partials/footer') -%>

</body>
</html>